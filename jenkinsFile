pipeline {
    agent { docker { image 'maven:3.3.3'}}
    stages {
           stage('load properties file..') {
                  steps {
                       script {
                             props = readProperties file:'pipeline.properties',
                             echo 'load SUCCESS'
                              }
                       }    
               }
            stage('read properties file..') {
                  steps {
                       script {
                             gitURL: props.gitUrl,
                             branch: props.branchName, 
                             echo 'Read SUCCESS'
                              }
                        }    
              }
              stage('Git read') {
                      steps {
                            git url: ${gitURL},
              branch: ${branch}
                            echo 'Read success'
                         }
              }
             stage('Building Sonar...') {
              steps {
                sh 'mvn sonar:sonar -Dsonar.host.url=http://my61425dns.eastus2.cloudapp.azure.com:9000'
                echo 'Sonar scan success'
                    }
             }
            stage('Build') { 
           steps {
               sh 'mvn clean install'
               echo 'Build success'
                 }  
              }
          }
      }
