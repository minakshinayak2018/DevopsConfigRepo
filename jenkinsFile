pipeline {
    agent { docker { image 'maven:3.3.3'}}
    stages {
           stage('Load properties file') {
                  Properties properties = new Properties()
                  properties.load(('pipeline.properties').newDataInputStream())
                  def gitURL = properties.getProperty('gitUrl')
                  sh echo "gitURL=${gitURL}"        
             }
              stage('Git read') {
                      steps {
                            git url: ${gitURL},
              branch: 'master'
                            echo 'Read success'
                         }
              }
             stage('Building Sonar...') {
              steps {
                sh 'mvn sonar:sonar -Dsonar.host.url=http://my61425dns.eastus2.cloudapp.azure.com:9000'
                echo 'Sonar scan success'
                    }
             }
            stage('Build') { 
           steps {
               sh 'mvn clean install'
               echo 'Build success'
                 }  
              }
          }
      }
