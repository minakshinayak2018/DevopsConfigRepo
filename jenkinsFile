pipeline {
    agent { docker { image 'maven:3.3.3'}}
        stages {
           stage('load properties file..') {
                  steps {
                       script {
                             props = readProperties file:'pipeline.properties'
                             echo 'load SUCCESS'
                             }
                      }    
               }
               stage('read git url file..') {
                  steps {
                         git url: props.gitUrl,
                         branch: props.branchName
                         echo 'Read SUCCESS'
                         echo "gitURL=${git url}"
                        }    
                   }
              stage('sonar scan..') {
                  steps {
                         sh props.buildSonarScan
                         echo 'Sonar scan SUCCESS'
                        }    
                   }
              stage('maven build..') {
                  steps {
                         sh props.mavenClean
                         echo 'Build SUCCESS'
                        }    
                   }
              stage('Git read') {
                      steps {
                           git url: ${git url}
              branch: ${branch}
                           echo 'Read success'
                       }
                }
             stage('Building Sonar...') {
              steps {
                sh ${buildSonarScan}
                echo 'Sonar scan success'
                    }
               }
           stage('Build') { 
             steps {
               sh ${mavenClean}
               echo 'BUILD SUCCESS'
                 }  
            }
        }
    }
